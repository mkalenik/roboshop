<h1>Kategorie</h1>
<p>
  <%= link_to new_admin_category_path, class: "btn btn-success" do %>
    <span class="bi bi-plus"></span> Dodaj nową kategorię
  <% end %>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to "Edycja", edit_admin_category_path(category), class: "btn btn-success btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
