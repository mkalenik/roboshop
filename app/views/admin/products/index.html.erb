<h1>Produkty</h1>
<p>
  <%= link_to new_admin_product_path, class: "btn btn-success" do %>
    <span class="bi bi-plus"></span> Dodaj nowy produkt
  <% end %>
</p>

<div class="search-form ">
  <%= search_form_for [:admin, @q] do |f| %>
    <p>
      <%= f.text_field :name_or_description_or_long_description_cont, placeholder: "Szukaj tekstu" %>
      <%= f.text_field :price_gt, placeholder: "Cena >" %>
      <%= f.submit "Szukaj", class: "btn btn-success btn-sm" %>
    </p>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name, "Nazwa") %></th>
      <th><%= sort_link(@q, :price, "Cena") %></th>
      <th>Kategoria</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency product.price %></td>
        <td><%= product.category.name %></td>
        <td>
          <%= link_to "Edycja", edit_admin_product_path(product), class: "btn btn-success btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
